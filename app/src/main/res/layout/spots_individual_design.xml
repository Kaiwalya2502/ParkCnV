<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:layout_margin="13dp"
            android:src="@drawable/ic_launcher_foreground"
            android:id="@+id/parking_spot_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spot_name"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:padding="8dp"
            android:gravity="center"
            android:hint="spot1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Distance From Destination"
            android:padding="8dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/alata_regulat"
            android:id="@+id/distance_from_destination"
            android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price_For_the_Spot"
                android:padding="8dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/alata_regulat"
                android:id="@+id/price_for_the_spot"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>